{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
      "block-scoped-var": "error",
      "eqeqeq": "error",
      "no-var": "error",
      "prefer-const": "error",
      "eol-last": "error",
      "prefer-arrow-callback": "error",
      "no-trailing-spaces": "error",
      "quotes": ["warn", "single", { "avoidEscape": true }],
      "no-restricted-properties": [
        "error",
        {
          "object": "describe",
          "property": "only"
        },
        {
          "object": "it",
          "property": "only"
        }
      ]
    }
}
